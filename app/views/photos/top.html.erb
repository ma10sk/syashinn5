<!DOCTYPE html>
<html>
<head>
    <%= stylesheet_link_tag 'photostop', :media => "all" %>
</head>
<body class="photostop">

<div class="subtitle">
<h2>ハッシュタグ検索</h2>
</div>

<div class="search-container">
<%= form_tag({controller:"photos",action:"top"}, method: :get) do %>
  <p><%= text_field_tag :search %></p>
  <%= submit_tag '検索する' %>
<% end %>
</div>

<div class="subsubtitle">
<h3>ハッシュタグ一覧</h3>
</div>
<div class="taglist-container">
<% @tag_list.each do |list| %>
  <div class='taglist'>
    <div class="tagline">
    <i class="fa-solid fa-hashtag tag-icon"></i>
    <%= link_to list.tag_name, tag_photos_path(tag_id: list.id), class: "tag-link" %>
    <%= "(#{list.photos.count})" %>
    </div>
    <%= link_to "削除", destroy_tag_path(tag_id: list.id), data: { method: :delete, confirm: "本当に削除してもよろしいですか？" }, class: "tag-delete-link" %>
  </div>
<% end %>
</div>


</body>
</html>